{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "examples", "dist",
    "src/test", "**/*.spec.ts", "coverage", "jest.*"]
}
